<div class="project-list">
  {{#each recipes as |recipe| }}
  <section class="columns">
    <div class="card column m-5" data-card-id="{{recipe.id}}">
      <div class="card-image" id="recipe-card">
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image" data-card-id="{{recipe.id}}">
        </figure>
        <header class="card-header" data-card-id="{{recipe.id}}">
          <p class="card-header-title" id="recipe-name" data-card-id="{{recipe.id}}">
            {{recipe.name}}
          </p>
        </header> 
        <footer class="card-footer">
          <a href="/api/update-recipes/{{recipe.id}}">
            <btn class="edit-btn" data-edit-id="{{recipe.id}}">Edit</btn>
          </a>
          <btn class="delete-btn" data-id="{{recipe.id}}">Delete</btn>
        </footer>
      </div>
    </div>
  </section>
  {{/each}}
</div>

    
<footer class="columns is-centered is-mobile mt-5">     
  <a href="/add-recipes">
    <button class="button is-primary is-light" id="add-recipe">Add Recipe</button>
  </a>
  <p>fruit icons PNG Designed By lancarrejekiamin from <a href="https://pngtree.com"> Pngtree.com</a></p>
</footer>

<script src="./js/cardHandler.js"></script>
